=content_for :breadcrumb do
  %ul.breadcrumb   
    %li=  "CLAIMS"
    %li= divider
    %li.active
      = "NEW CLAIM"
.well.well-small
  .table-responsive
    %table
      %tr
        %td= f.input :scheme, :collection => scheme_types, :input_html => {:class => "input-medium", onchange:"check_selected_scheme_type($(this).val())"}
        %td.claim-card-no= f.input :card_no,:label => "Ration card no", :input_html => {:class => "input-medium"}
        %td.claim-urn-no= f.input :urn_no, :input_html => {:class => "input-medium"}
        %td.claim-reg-no= f.input :reg_no, :input_html => {:class => "input-medium"}
        %td= f.input :ip_no,:label => "IP no",:input_html => {:class => "input-medium"}

.well.well-small
  .table-responsive
    %table
      %tr
        %td= f.input :patient_name, :input_html => {:class => "input-medium"}
        %td= f.input :village, :input_html => {:class => "input-medium"}
        %td= f.input :taluk, :input_html => {:class => "input-medium"}
        %td= f.input :district, :input_html => {:class => "input-small" }
        %td= f.input :age, :input_html => {:class => "input-small" }
        %td= f.input :gender, :collection => gender_types, :input_html => {:class => "input-small"}
        %td= f.input :mobile_no, :input_html => {:class => "input-small" }
        %td= f.input :aadhar_no, :input_html => {:class => "input-small" }
        %td= f.input :uhid_no, :input_html => {:class => "input-small" }
      %tr
        %td.relation.hide= f.input :relationship,:input_html => {:class => "input-medium"}
        %td.designation.hide= f.input :designation,:input_html => {:class => "input-medium"}
        %td.kgid.hide= f.input :kgid_no,:label => "KGID no",:input_html => {:class => "input-medium"}

.well.well-small
  .table-responsive
    %table
      %tr
        %td= f.input :date_of_admission, :input_html => {:class => "input-small"}
        %td= f.input :date_of_surgery, :input_html => {:class => "input-small"}
        %td= f.input :date_of_discharge, :input_html => {:class => "input-small"}
        %td= f.input :procedure_code, :input_html => {:class => "input-small" }
        %td.plan-of-treatment= f.input :plan_of_treatment,:input_html => {:class => "input-medium "}

.well.well-small
  .table-responsive
    %table
      %tr
        %td= f.input :utr_no, :input_html => {:class => "input-medium"}
        %td= f.input :claim_amount, :input_html => {:class => "input-medium"}
        %td= f.input :status, :collection => claim_status_types, :input_html => {:class => "input-medium", onchange:"check_status_type($(this).val())"}
        %td.hide.claim-reason-for-rejection= f.input :reason_for_rejection, :input_html => {:class => "input-medium"}
        %td= f.input :approved_amount, :input_html => {:class => "input-medium"}
        %td= f.input :penalty_amount, :input_html => {:class => "input-small" }
        %td= f.input :final_amount, :input_html => {:class => "input-small" }
        %td= f.input :tds_amount, :input_html => {:class => "input-small" }
        %td= f.input :net_amount, :input_html => {:class => "input-small" }