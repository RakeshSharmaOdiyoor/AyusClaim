<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-signin' }) do |f| %> 
  <div class='devise_wrapper'>
    <% if flash[:alert] %>
      <div class="alert alert-error">
        <a class="close" data-dismiss="alert" href="#">Ã—</a>
        <%= flash[:alert]  %>
      </div>
    <%end%>

    <div class="form-inputs">
      <%= f.input :email, :required => false, :autofocus => true, :label => "Username Or Email", :input_html=>{class: "form-control input-sm"} %>
      <br />
      <%= f.input :password, :required => true, :input_html=>{class: "form-control input-sm"} %>
      <br />
      <%= f.input :password_confirmation, :required => true, :input_html=>{class: "form-control input-sm"} %>
      <br /> 
    </div>

    <div class="form-actions" style="text-align:center">
    <%= f.button :submit, "Sign up" %>
    </div> 
    <br />
   
    
  </div>
<% end %>





