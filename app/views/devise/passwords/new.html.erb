<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %> 
  <div class='devise_wrapper'>
    <% if flash[:alert] %>
      <div class="alert alert-error">
        <a class="close" data-dismiss="alert" href="#">Ã—</a>
        <%= flash[:alert]  %>
      </div>
    <%end%>

    <div class="form-inputs">
      <%= f.input :email, :required => false, :autofocus => true, :label => "Username Or Email", :input_html=>{class: "form-control input-sm"} %>
      <br />
      
    </div>
    <%= f.button :submit, "Send me reset password instructions", :class => 'btn btn-lg btn-primary btn-block' %> 
    <br />
<% end %>






